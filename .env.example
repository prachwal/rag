# Application Settings
APP_NAME=RAG Application
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=postgresql://localhost:5432/rag_db
# DATABASE_URL=sqlite:///app.db

# Neon Database Settings (for cloud PostgreSQL)
NEON_DB_URL=postgresql://username:password@hostname:port/database?sslmode=require

# API Settings
API_KEY=your_api_key_here
API_TIMEOUT=30

# YouTube API Settings
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_API_TIMEOUT=30

# HuggingFace API Settings
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_API_TIMEOUT=30

# Embedding Model Settings
EMBEDDING_MODEL=Voicelab/sbert-large-cased-pl

# Model Memory and Performance Settings
MAX_MODEL_MEMORY_GB=4
ENABLE_MODEL_QUANTIZATION=false
EMBEDDING_BATCH_SIZE=32

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security Settings (REQUIRED)
SECRET_KEY=your_secret_key_minimum_32_characters_long_key_here

# Additional Settings
ENVIRONMENT=development